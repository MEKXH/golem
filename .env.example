# GOLEM_TOOLS_EXEC_RESTRICT_TO_WORKSPACE=true
# GOLEM_CHANNELS_TELEGRAM_ENABLED=true
# GOLEM_CHANNELS_TELEGRAM_TOKEN=REQUIRED_IN_PRODUCTION
